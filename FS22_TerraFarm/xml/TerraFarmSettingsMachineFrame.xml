<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="terraFarmMachine">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Static page header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" text="TerraFarm Machine" id="headerText" />
        </GuiElement>

        <!-- Layout content box -->
        <GuiElement type="empty" profile="ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="bitmap" profile="topScrollClipper" name="topClipper" />
            <GuiElement type="bitmap" profile="bottomScrollClipper" name="bottomClipper" />

            <GuiElement type="scrollingLayout" profile="ingameMenuSettingsLayout" id="boxLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">
                <GuiElement type="text" profile="settingsMenuSubtitle" text=" " />

                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformPaintRadius" onEnterPressed="onRadiusPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Paint radius" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>

                <GuiElement type="text" profile="settingsMenuSubtitle" text=" " />

                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformStrength" onEnterPressed="onStrengthPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Raise/lower strength" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformRadius" onEnterPressed="onRadiusPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Raise/lower radius" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>

                <GuiElement type="text" profile="settingsMenuSubtitle" text=" " />

                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformSmoothStrength" onEnterPressed="onStrengthPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Smooth strength" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformSmoothRadius" onEnterPressed="onRadiusPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Smooth radius" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>

                <GuiElement type="text" profile="settingsMenuSubtitle" text=" " />

                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformFlattenStrength" onEnterPressed="onStrengthPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Flatten strength" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>
                <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                    <GuiElement type="textInput" profile="ingameMenuGameSettingsTextInput" id="terraformFlattenRadius" onEnterPressed="onRadiusPressedTextInput" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="Flatten radius" />
                    <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="" />
                </GuiElement>
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>